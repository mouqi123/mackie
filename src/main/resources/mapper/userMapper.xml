<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user">

	<resultMap type="UserDO" id="userResultMap">
		<id column="user_id" property="userId" />
		<result column="user_name" property="userName" />
		<result column="password" property="password" />
		<result column="phone_number" property="phoneNumber" />
		<result column="last_login" property="lastLogin" />
	</resultMap>

	<sql id="full_columns">
		user_id,user_name,password,phone_number,last_login
	</sql>
	
	<sql id="where">
		<where>
			<if test="userId!=0">
				and user_id = #{userId}
			</if>
			<if test="userName!=null and userName!=''">
				and user_name=#{userName}
			</if>
			<if test="phoneNumber!=null and phoneNumber!=''">
				and phone_number=#{phoneNumber}
			</if>
		</where>
	</sql>

	<select id="selectUserById" parameterType="int" resultMap="userResultMap">
		select * from t_user where user_id = #{id}
	</select>
	
	<select id="selectUserByPhoneNumber" parameterType="String" resultMap="userResultMap">
		select * from t_user where phone_number=#{phoneNumber};
	</select>
	
	<select id="selectUserOne" parameterType="UserDO" resultMap="userResultMap">
		select * from t_user 
		<include refid="where"/>
	</select>
</mapper>